        </Grid.RowDefinitions>

        <Grid Grid.Column='5' Grid.Row="3" Grid.ColumnSpan="22" Grid.RowSpan="13"
              BorderBrush="Black" BorderThickness="7" CornerRadius="40" >
            <Grid.Background>
                <SolidColorBrush Color="White" Opacity=".25"></SolidColorBrush>
            </Grid.Background>
        </Grid>

        <Viewbox Grid.Column='5' Grid.Row="3" Grid.ColumnSpan="22" Grid.RowSpan="13">
            <TextBlock x:Name="blockInfo" Grid.Row="5" Grid.Column="7" Grid.ColumnSpan="18" Grid.RowSpan="13"
                   FontSize="50" FontFamily="Ink Draft" Foreground="Black" HorizontalAlignment="Left"
                   VerticalAlignment="Top" Text="&#10; there are few ways to win: 
                                                 &#10; First you can earn more money than control 3 monopoly.
                                                 &#10; Second you can control get Station monopoly by buying all the stations and win.
                                                 &#10; Third when the game come to its end than the player with the highest value will win.         ">

            </TextBlock>
        </Viewbox>



        <Button Grid.Row="0" Grid.Column="0" PointerEntered="btn_PointerEntered" PointerExited="btn_PointerExited"
                x:Name="btn_SliderVertical" Click="btn_SliderVertical_Click" Style="{StaticResource MyButtonStyle}"
                Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Image x:Name="imgSlider" Source="/Assets\Buttons\UsingButtons\Slider (2).png"></Image>
        </Button>
    </Grid>
</Page>
